}

composite Mux4[16] (in0: bits[16],
                    in1: bits[16],
                    in2: bits[16],
                    in3: bits[16],
                    out: bits[16],
                    sel: bits[2],
                    enable_n: bit) {
    create lower8: Mux4[8] (
        in0 => in0[7:0],
        in1 => in1[7:0],
        in2 => in2[7:0],
        in3 => in3[7:0],
        out => out[7:0],
        sel => sel,
        enable_n => enable_n,
    );
    create upper8: Mux4[8] (
        in0 => in0[15:8],
        in1 => in1[15:8],
        in2 => in2[15:8],
        in3 => in3[15:8],
        out => out[15:8],
        sel => sel,
        enable_n => enable_n,
    );
}
