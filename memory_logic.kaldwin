extern node mem_enable;
extern node mem_mode;
extern node addr_bus[16];
extern node async_write;

transient node rom_ce;
transient node ram_ce;
transient node oe;
transient node we;

extern node rom_ce_n;
extern node ram_ce_n;
extern node oe_n;
extern node we_n;

rom_ce = mem_enable & (addr_bus[15] == 1'h0);
ram_ce = mem_enable & (addr_bus[15] == 1'h1);
oe = mem_mode == 1'h0;
we = (mem_mode == 1'h1) & async_write;

rom_ce_n = ~rom_ce;
ram_ce_n = ~ram_ce;
oe_n = ~oe;
we_n = ~we;
